{
    "openapi": "3.0.0",
    "info": {
        "title": "noPromises API",
        "version": "1.0.0",
        "description": "API documentation for noPromises Flow-Based Programming server"
    },
    "paths": {
        "/api/v1/flows": {
            "get": {
                "summary": "List all flows",
                "responses": {
                    "200": {
                        "description": "List of flows",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Flow"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Create a new flow",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/FlowDefinition"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Flow created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Flow"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid flow definition",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/flows/{flow-id}": {
            "parameters": [
                {
                    "name": "flow-id",
                    "in": "path",
                    "required": true,
                    "schema": {
                        "type": "string"
                    }
                }
            ],
            "get": {
                "summary": "Get flow details",
                "responses": {
                    "200": {
                        "description": "Flow details",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Flow"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Flow not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/flows/{flow-id}/start": {
            "parameters": [
                {
                    "name": "flow-id",
                    "in": "path",
                    "required": true,
                    "schema": {
                        "type": "string"
                    }
                }
            ],
            "post": {
                "summary": "Start a flow",
                "responses": {
                    "200": {
                        "description": "Flow started successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Flow"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Flow not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/flows/{flow-id}/stop": {
            "parameters": [
                {
                    "name": "flow-id",
                    "in": "path",
                    "required": true,
                    "schema": {
                        "type": "string"
                    }
                }
            ],
            "post": {
                "summary": "Stop a flow",
                "responses": {
                    "200": {
                        "description": "Flow stopped successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Flow"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Flow not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Flow": {
                "type": "object",
                "required": ["id", "state"],
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "state": {
                        "type": "string",
                        "enum": ["created", "starting", "running", "stopping", "stopped", "error"]
                    }
                }
            },
            "FlowDefinition": {
                "type": "object",
                "required": ["id", "nodes", "edges"],
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "nodes": {
                        "type": "object",
                        "additionalProperties": {
                            "$ref": "#/components/schemas/Node"
                        }
                    },
                    "edges": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Edge"
                        }
                    }
                }
            },
            "Node": {
                "type": "object",
                "required": ["type"],
                "properties": {
                    "type": {
                        "type": "string"
                    },
                    "config": {
                        "type": "object"
                    }
                }
            },
            "Edge": {
                "type": "object",
                "required": ["fromNode", "fromPort", "toNode", "toPort"],
                "properties": {
                    "fromNode": {
                        "type": "string"
                    },
                    "fromPort": {
                        "type": "string"
                    },
                    "toNode": {
                        "type": "string"
                    },
                    "toPort": {
                        "type": "string"
                    }
                }
            },
            "Error": {
                "type": "object",
                "required": ["error"],
                "properties": {
                    "error": {
                        "type": "object",
                        "required": ["message"],
                        "properties": {
                            "message": {
                                "type": "string"
                            },
                            "code": {
                                "type": "string"
                            },
                            "details": {
                                "type": "object"
                            }
                        }
                    }
                }
            }
        }
    }
}
