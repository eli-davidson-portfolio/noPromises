{
  "openapi": "3.0.0",
  "info": {
    "title": "noPromises API",
    "version": "1.0.0",
    "description": "Flow-Based Programming Server API"
  },
  "paths": {
    "/api/v1/flows": {
      "post": {
        "summary": "Create a new flow",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "nodes": {
                    "type": "object"
                  },
                  "edges": {
                    "type": "array"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Flow created successfully"
          }
        }
      },
      "get": {
        "summary": "List all flows",
        "responses": {
          "200": {
            "description": "List of flows"
          }
        }
      }
    },
    "/api/v1/flows/{id}": {
      "get": {
        "summary": "Get flow details",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Flow details"
          }
        }
      }
    }
  }
} 